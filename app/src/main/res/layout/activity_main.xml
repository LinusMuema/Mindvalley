<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    tools:context=".ui.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_title"
                    android:layout_marginStart="20dp"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:id="@+id/episodes_section"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/episodes_title"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="20dp"
                            android:textSize="20sp"
                            android:text="@string/episodes_title" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:id="@+id/episodes_recycler"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/episodes_section"
                    android:id="@+id/channels_section"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/channels_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="20dp"
                            android:textSize="20sp"
                            android:text="@string/channels_title" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:id="@+id/channels_recycler"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/channels_section"
                    android:id="@+id/categories_section"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/categories_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="20dp"
                            android:textSize="20sp"
                            android:text="@string/categories_title" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:id="@+id/categories_recycler"/>

                </LinearLayout>

        </RelativeLayout>

</ScrollView>